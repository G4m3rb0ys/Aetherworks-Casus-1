<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aetherworks_Victuz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Aetherworks_Victuz.styles.css" asp-append-version="true" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 NavBarGeneral flex-grow-2">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/img/Logo.png" alt="Logo" style="height: 40px; margin-right: 10px;" />
                    Victuz
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary nav-link text-dark mx-1 max-width-button" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary nav-link text-dark mx-1 max-width-button" asp-area="" asp-controller="VictuzActivities" asp-action="Index">Activities</a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Organizer"))
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary nav-link text-dark mx-1 max-width-button" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary nav-link text-dark mx-1 max-width-button" asp-area="" asp-controller="Locations" asp-action="Index">Locations</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary nav-link text-dark mx-1 max-width-button" asp-area="" asp-controller="Suggestions" asp-action="Index">Suggestions</a>
                            </li>
                        }


                    </ul>
                    <a class="btn btn-outline-primary nav-link text-dark mx-1 max-width-button" asp-area="" asp-controller="Home" asp-action="Voordelen">Word Lid?</a>
                    <div class="dropdown">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </button>
                        }
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a class="dropdown-item" href="/Identity/Account/Logout">Logout</a></li>
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Manage Account</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="VictuzActivities" asp-action="reservations">reservations</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>


    <footer>
        <table class="Victuz-Info">
            <thead>
                <tr>
                    <th>
                        <h4>Victuz</h4>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <p>
                            Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                            Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                        </p>
                    </td>
                </tr>
                </tbody>
        </table>
        <table class="Social-Links">
            <thead>
                <tr>
                    <th>
                        <h4>Social Media Links</h4>
                        <br />
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div class="rounded-social-buttons">
                        <a class="social-button linkedin" href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin"></i></a>
                        <a class="social-button tiktok" href="https://www.tiktok.com/" target="_blank"><i class="fab fa-tiktok"></i></a>
                        <a class="social-button youtube" href="https://www.youtube.com/" target="_blank"><i class="fab fa-youtube"></i></a>
                        <a class="social-button instagram" href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"></i></a>
                        </div>
                    </td>
                </tr>
             </tbody>
        </table>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
