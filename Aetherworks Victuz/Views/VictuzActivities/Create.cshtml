@model Aetherworks_Victuz.Models.VictuzActivity

@{
    ViewData["Title"] = "Creëer Activiteit";
}
<link href="~/css/styles.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="activity-card">
                <div class="activity-card-header">
                    <h2 class="mb-0">Creëer Activiteit</h2>
                </div>
                <div class="activity-card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <select asp-for="Category" asp-items="ViewBag.Category" id="categorySelect" class="form-select"></select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Picture" class="form-label"></label>
                            <input type="file" name="PictureFile" class="form-control" />
                            <span asp-validation-for="Picture" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LocationId" class="form-label"></label>
                            <select asp-for="LocationId" class="form-select" asp-items="ViewBag.LocationId"></select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ActivityDate" class="form-label"></label>
                            <input asp-for="ActivityDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ActivityDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="HostId" class="form-label"></label>
                            <select asp-for="HostId" class="form-select" asp-items="ViewBag.HostId"></select>
                        </div>

                        <div id="lineMemFree-linePayAll" class="form-group mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" type="number" min="0" step="0.01" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div id="lineMemberPrice" class="form-group mb-3">
                            <label asp-for="MemberPrice" class="form-label"></label>
                            <input asp-for="MemberPrice" type="number" min="0" step="0.01" class="form-control" />
                            <span asp-validation-for="MemberPrice" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ParticipantLimit" class="form-label"></label>
                            <input asp-for="ParticipantLimit" type="number" min="1" class="form-control" />
                            <span asp-validation-for="ParticipantLimit" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <input type="submit" value="Creëer Activiteit" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">Terug naar lijst</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#lineMemFree-linePayAll, #lineMemberPrice').hide();
        $('#categorySelect').on('change', function () {
            var selectedCategory = $(this).val();

            // Hide both divs initially
            $('#lineMemFree-linePayAll, #lineMemberPrice').hide();

            // Binary display mapping for each category
            switch (selectedCategory) {
                case 'Free':          // 00
                case 'MemOnlyFree':   // 00
                    // Hide both divs
                    break;

                case 'MemFree':       // 10
                    $('#lineMemFree-linePayAll').show(); // Show div 1
                    break;

                case 'PayAll':        // 11
                    $('#lineMemFree-linePayAll').show(); // Show div 1
                    $('#lineMemberPrice').show();        // Show div 2
                    break;

                case 'MemOnlyPay':    // 01
                    $('#lineMemberPrice').show();        // Show div 2
                    break;

                default:
                    // Hide both divs if no valid category is selected
                    break;
            }
        });
    });
</script>
