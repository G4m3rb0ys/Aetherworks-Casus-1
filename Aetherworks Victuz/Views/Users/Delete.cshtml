@model Aetherworks_Victuz.Models.User

@{
    ViewData["Title"] = "Verwijderen";
}

<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Credential)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Credential.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar de lijst</a>
    </form>
</div>
